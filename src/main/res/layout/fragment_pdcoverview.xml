<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:id="@+id/linear"
    tools:context=".pdcoverview">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:textColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

<TextView
    android:id="@+id/tv"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
        android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="20dp"
    android:layout_marginTop="10dp"

    android:textStyle="bold"
    android:text="LRV Pre-Departure Check"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:background="@color/yellow"
        />
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
        android:id="@+id/tv3"

        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:textColor="@color/black"
        android:text="CHECKLIST INFORMATION"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/add"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv2"

        android:layout_marginStart="40dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:text="Lead Vehicle (L):"
        />
        <TextView
            android:id="@+id/tvd"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv5"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:text="Mid Vehicle (M):"
            />
        <TextView
            android:id="@+id/mvd"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/dt"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:text="Trail Vehicle (T):"
            />
        <TextView
            android:id="@+id/dtd"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"


            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/lv"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:text="PDC Start:"
            />
        <TextView
            android:id="@+id/lvd"

            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"


            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
        android:id="@+id/btn1"
            android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginStart="100dp"

        />
        <Button
            android:id="@+id/btn3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_width="200dp"

            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_width="200dp"

            android:layout_height="50dp"/>




    <LinearLayout
        android:id="@+id/linearsp1"
        android:layout_width="400dp"
        android:layout_marginStart="10dp"

        android:layout_height="match_parent"
        android:orientation="vertical"
       >



        <Spinner
            android:id="@+id/sleadV"
            android:layout_width="match_parent"
            android:background="@drawable/dropdownlayer1"
            android:layout_height="50dp"

            />

        <Spinner
            android:id="@+id/strailv"
            android:layout_width="match_parent"
            android:background="@drawable/dropdownlayer1"
            android:layout_height="50dp"

            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearsp2"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
       >

        <Spinner
            android:layout_width="match_parent"
            android:background="@drawable/dropdownlayer1"
            android:layout_height="50dp"
            android:id="@+id/sleadv3car"

            />


        <Spinner
            android:id="@+id/smidv3car"
            android:layout_width="match_parent"
            android:background="@drawable/dropdownlayer1"
            android:layout_height="50dp"

            />



        <Spinner
            android:id="@+id/strailv3car"
            android:layout_width="match_parent"
            android:background="@drawable/dropdownlayer1"
            android:layout_height="50dp"

            />
    </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/update"
        android:layout_marginStart="100dp"
        android:layout_width="200dp"
        android:backgroundTint="@color/blue"
        android:layout_height="50dp"

        android:text="Update LRV(s)"/>
    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#d3d3d3"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt3"

            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:textColor="@color/black"
            android:text="LRV ISSUES"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/add"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln2"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table"

            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#d3d3d3"
                android:gravity="center"
                android:id="@+id/tr1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:textSize="20dp"

                    android:id="@+id/txt6">

                </TextView>

            </TableRow>


        </TableLayout>
        <TableLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbl">

        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        >
        <TableLayout
            android:id="@+id/table1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d3d3d3"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tr2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:textSize="20dp"

                    android:id="@+id/txt7"></TextView>

            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbl1"></TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:id="@+id/ln5">

        <TableLayout
            android:id="@+id/table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#d3d3d3"
                android:gravity="center"
                android:id="@+id/tr3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:textSize="20dp"

                    android:id="@+id/txt8">

                </TextView>

            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbl2"></TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln6"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
        android:id="@+id/txt5"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
        android:textSize="20dp"


        android:text=""/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Test Complete"
            android:backgroundTint="@color/green"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:text=""/>
        <TextView
            android:id="@+id/tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20dp"


            android:text=""/>
        <TextView
            android:id="@+id/tx3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"


            android:text=""/>




    </LinearLayout>


</LinearLayout>